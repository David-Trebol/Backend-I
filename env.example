# ===========================================
# CONFIGURACIÓN DE ENTORNO
# ===========================================

# Entorno de la aplicación
NODE_ENV=development

# Puerto del servidor
PORT=3000

# ===========================================
# CONFIGURACIÓN DE BASE DE DATOS
# ===========================================

# URI de MongoDB
MONGO_URI=mongodb://localhost:27017/miBaseDeDatos

# Configuración de pool de conexiones
DB_MAX_POOL_SIZE=10
DB_SERVER_SELECTION_TIMEOUT=5000
DB_SOCKET_TIMEOUT=45000
DB_BUFFER_MAX_ENTRIES=0

# ===========================================
# CONFIGURACIÓN DE SEGURIDAD
# ===========================================

# Secretos para JWT y sesiones
JWT_SECRET=tu-jwt-secret-super-seguro-cambiar-en-produccion
SESSION_SECRET=tu-session-secret-super-seguro-cambiar-en-produccion

# Configuración de JWT
JWT_EXPIRATION=24h

# Configuración de bcrypt
BCRYPT_ROUNDS=10

# Configuración de recuperación de contraseña
PASSWORD_RESET_EXPIRATION=3600
PASSWORD_MIN_LENGTH=6
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SPECIAL_CHARS=true

# Configuración de intentos de login
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900

# ===========================================
# CONFIGURACIÓN DE EMAIL
# ===========================================

# Configuración SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=tu-email@gmail.com
SMTP_PASS=tu-password-de-aplicacion

# Configuración de la aplicación
APP_NAME=Mi Aplicación
FRONTEND_URL=http://localhost:3000
APP_EMAIL=noreply@miapp.com

# Configuración de verificación de email
EMAIL_REQUIRE_VERIFICATION=false
EMAIL_VERIFICATION_EXPIRATION=86400

# ===========================================
# CONFIGURACIÓN DE RATE LIMITING
# ===========================================

# Configuración de rate limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# ===========================================
# CONFIGURACIÓN DE CACHÉ
# ===========================================

# Configuración de caché
CACHE_ENABLED=true
CACHE_TTL=300
CACHE_MAX_SIZE=100
CACHE_CHECK_PERIOD=600

# ===========================================
# CONFIGURACIÓN DE REDIS
# ===========================================

# Configuración de Redis (opcional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ===========================================
# CONFIGURACIÓN DE LOGGING
# ===========================================

# Nivel de logging
LOG_LEVEL=debug
LOG_FORMAT=json

# Configuración de archivos de log
LOG_FILE_ENABLED=true
LOG_FILE_PATH=logs/app.log
LOG_FILE_MAX_SIZE=10m
LOG_FILE_MAX_FILES=5

# Configuración de consola
LOG_CONSOLE_ENABLED=true
LOG_CONSOLE_COLORIZE=true

# ===========================================
# CONFIGURACIÓN DE CORS
# ===========================================

# Origen permitido para CORS
CORS_ORIGIN=http://localhost:3000

# ===========================================
# CONFIGURACIÓN DE AUDITORÍA
# ===========================================

# Habilitar auditoría
ENABLE_AUDIT=true

# ===========================================
# CONFIGURACIÓN DE VALIDACIÓN
# ===========================================

# Configuración de validación de contraseñas
PASSWORD_MIN_LENGTH=6
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SPECIAL_CHARS=true

# ===========================================
# CONFIGURACIÓN DE DESARROLLO
# ===========================================

# Habilitar logs detallados en desarrollo
DEBUG=true

# Configuración de hot reload
NODEMON_ENABLED=true

# ===========================================
# CONFIGURACIÓN DE PRODUCCIÓN
# ===========================================

# Configuración para producción (descomentar en producción)
# NODE_ENV=production
# LOG_LEVEL=info
# LOG_CONSOLE_COLORIZE=false
# DEBUG=false

# ===========================================
# CONFIGURACIÓN DE TESTING
# ===========================================

# Configuración para testing
# NODE_ENV=test
# MONGO_URI=mongodb://localhost:27017/test-database
# LOG_LEVEL=error
# ENABLE_AUDIT=false
# ENABLE_RATE_LIMIT=false 